{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "./dist",
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowJs": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2015",
    "pretty": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "typings/**/*.d.ts"]
}
